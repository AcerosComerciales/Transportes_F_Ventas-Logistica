#Region " Procedimientos Almacenados "
	
   Public Function getAyuda(ByRef m_datos As DataSet, ByVal x_opcion As String, ByVal x_cadena As String)
      Try
         Dim sql As String = String.Format("Select PIEZA_Id As Id, PIEZA_Codigo As Codigo, PIEZA_Descripcion As Descripcion, PIEZA_Clasificacion As Clasificacion From Transportes.TRAN_Piezas{0}", vbNewLine)
         sql &= String.Format("Where {0}", vbNewLine)
         If x_opcion = 0 Then
            sql &= String.Format("PIEZA_Codigo Like '%{1}%' Or PIEZA_Clasificacion Like '%{1}%'{0}", vbNewLine, x_cadena)
         ElseIf x_opcion = 1 Then
            sql &= String.Format("PIEZA_Descripcion Like '%{1}%'{0} Or PIEZA_Clasificacion Like '%{1}%'{0}", vbNewLine, x_cadena)
         Else
            sql &= String.Format("PIEZA_Descripcion Like '%{1}%'{0} Or PIEZA_Clasificacion Like '%{1}%'{0}", vbNewLine, x_cadena)
         End If
         DAEnterprise.AsignarProcedure(sql, CommandType.Text)
         m_datos = DAEnterprise.ExecuteDataSet()
         Return (m_datos.Tables(0).Rows.Count > 0)
      Catch ex As Exception
         Throw ex
      End Try
   End Function

